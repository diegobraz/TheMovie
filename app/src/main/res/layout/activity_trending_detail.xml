<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.TrendingDetailActivity">


    <ImageView
        android:id="@+id/tv_Image_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="fitStart"
        tools:src="@tools:sample/avatars"
        android:contentDescription="@string/movie_image_description">

    </ImageView>




    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:textSize="22sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_Image_detail"
        tools:text="Iron Man"
        android:gravity="center_horizontal" />


    <TextView
        android:id="@+id/tv_votes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:textColor="@color/classification"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        tools:text="4.50"
        android:gravity="center_horizontal" />



    <TextView
        android:id="@+id/description_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_votes"
        tools:text="@tools:sample/lorem"
        />

    <TextView
        android:id="@+id/genre_movie_deatil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description_detail"
        tools:text="Drame" />


    <TextView
        android:id="@+id/genre2_movie_deatil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:textSize="12sp"
        android:visibility="invisible"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/genre_movie_deatil"
        app:layout_constraintTop_toBottomOf="@id/description_detail"

        tools:text="Horror" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/prodution_relycle_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/genre_movie_deatil"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:layout_marginStart="12dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>